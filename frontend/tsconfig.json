{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "./public/dist/build/",
    "target": "es5",
    "lib": ["dom", "es2015", "es2016.array.include", "es2017.string"],
    "jsx": "react",
    "allowJs": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "types": [
      "jest"
    ]
  },
  "exclude": [
    ".yarn",
    "**/node_modules",
    "public/dist",
    "**/__tests__",
    "integration-tests"
  ],
  "include": [
    "**/*.js",
    "**/*.jsx",
    "**/*.ts",
    "**/*.tsx"
  ]
}
