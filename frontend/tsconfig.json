{
  "compilerOptions": {
    "skipLibCheck": true,
    "baseUrl": ".",
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "./public/dist/build/",
    "target": "es2021",
    "jsx": "react",
    "allowJs": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "typeRoots": ["node_modules/@types", "@types"],
    "types": ["node", "jest", "cypress-axe", "console"]
  },
  "exclude": [
    ".yarn",
    "**/node_modules",
    "public/dist",
    "packages/console-dynamic-plugin-sdk/scripts",
    "**/integration-tests",
    "**/integration-tests-cypress"
  ],
  "include": ["**/*.js", "**/*.jsx", "**/*.ts", "**/*.tsx", "**/*.json"]
}
