{
  "compilerOptions": {
    "target": "es2021",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "allowJs": true,
    "noEmitOnError": true,
    "declaration": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "lib": ["es2016", "es2017.object", "es2020.promise", "es2020.string", "dom"],
    "typeRoots": ["node_modules/@types", "@types", "../../node_modules/@types"],
    "types": ["node", "sdk"]
  }
}
