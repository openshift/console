{
  "compilerOptions": {
    "target": "es2016",
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "jsx": "react",
    "allowJs": true,
    "noEmitOnError": true,
    "declaration": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "lib": ["es2016", "es2020.promise", "dom"],
    "typeRoots": ["node_modules/@types", "@types"],
    "types": ["node", "sdk"]
  }
}
