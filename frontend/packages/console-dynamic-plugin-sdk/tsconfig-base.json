{
  "compilerOptions": {
    "target": "es2016",
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "jsx": "react",
    "allowJs": true,
    "noEmitOnError": true,
    "declaration": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "lib": [
      "es2016",
      "es2017.object",
      "es2019.array",
      "es2020.promise",
      "es2020.string",
      "dom",
      "dom.iterable"
    ],
    "typeRoots": ["node_modules/@types", "@types"]
  }
}
