          "csi.storage.k8s.io/fstype": {
            "name": "%ceph-storage-plugin~Filesystem Type%",
            "hintText": "%ceph-storage-plugin~Ceph RBD filesystem type. Default set to ext4%",
            "value": "ext4",
            "visible": false
