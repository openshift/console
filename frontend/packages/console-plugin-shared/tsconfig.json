{
  "compilerOptions": {
    "outDir": "dist/lib",
    "target": "es2021",
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "jsx": "react-jsx",
    "allowJs": true,
    "noEmitOnError": true,
    "declaration": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "lib": ["es2021", "dom"],
    "typeRoots": ["node_modules/@types", "@types", "../../node_modules/@types"],
    "types": ["node"]
  },
  "files": ["src/index.ts"]
}
