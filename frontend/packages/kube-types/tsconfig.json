{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist/",
    "target": "es5",
    "lib": ["es2015", "es2016.array.include", "es2017.string"],
    "allowJs": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "types": [
      "node",
      "jest"
    ]
  },
  "exclude": [
    ".yarn",
    "**/node_modules",
    "src",
    "**/__tests__"
  ],
  "include": [
    "./.tools/**/*.ts"
  ]
}
